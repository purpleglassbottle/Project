function isUserLoggedIn() {
    // Check login status (example with local storage)
    return localStorage.getItem('userLoggedIn') === 'true';
}

function handleLogin() {
    const username = document.getElementById('username').value;
    const password = document.getElementById('password').value;

    // Simulate login validation logic (adjust as needed)
    if (username === 'admin' && password === 'password') {
        localStorage.setItem('userLoggedIn', 'true');
        loadProfileDetails(); // Load profile details after successful login
    } else {
        alert("Invalid login credentials.");
    }

    return false; // Prevent default form submission
}

function checkLoginStatus() {
    if (isUserLoggedIn()) {
        document.getElementById('login-form').style.display = 'none';
        document.getElementById('profile-details').style.display = 'block';
        loadProfileDetails();
    } else {
        document.getElementById('login-form').style.display = 'block';
        document.getElementById('profile-details').style.display = 'none';
    }
}

function loadProfileDetails() {
    // Fetch profile information from some source (example data)
    const profile = {
        picture: 'path/to/profile_picture.jpg',
        name: 'John Doe',
        genres: 'Jazz, Blues, Rock',
        musicians: 'John Coltrane, B.B. King, Jimi Hendrix',
    };

    document.getElementById('profile-picture').src = profile.picture;
    document.getElementById('profile-name').innerText = profile.name;
    document.getElementById('profile-genres').innerText = profile.genres;
    document.getElementById('profile-musicians').innerText = profile.musicians;
}

function saveProfile() {
    const newName = document.getElementById('edit-name').value;
    const newGenres = document.getElementById('edit-genres').value;
    const newMusicians = document.getElementById('edit-musicians').value;

    // Save profile information logic (this is just a basic example)
    const updatedProfile = {
        name: newName,
        genres: newGenres,
        musicians: newMusicians,
    };

    // Update display and hide the edit form
    document.getElementById('profile-edit').style.display = 'none';
    loadProfileDetails();

    return false; // Prevent default form submission
}

function editProfile() {
    document.getElementById('profile-edit').style.display = 'block';
}
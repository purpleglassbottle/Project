// Variable to simulate login status
let isLoggedIn = false;

// Function to handle login
function handleLogin() {
    const username = document.getElementById('username').value;
    const password = document.getElementById('password').value;

    // Simulate successful login
    if (username && password) {
        isLoggedIn = true;
        redirectToProfileDetails(); // Redirect if login is successful
        return false; // Prevent default form submission
    }

    alert("Invalid login. Please try again.");
    return false;
}

// Function to check login status
function checkLoginStatus() {
    if (isLoggedIn) {
        document.getElementById('login-form').style.display = 'none';
        document.getElementById('profile-details').style.display = 'block';
        setTimeout(redirectToProfileDetails, 2000); // Redirect after 2 seconds
    } else {
        document.getElementById('login-form').style.display = 'block';
        document.getElementById('profile-details').style.display = 'none';
    }
}

// Redirect to profile details
function redirectToProfileDetails() {
    window.location.href = 'profile-details.html';
}
